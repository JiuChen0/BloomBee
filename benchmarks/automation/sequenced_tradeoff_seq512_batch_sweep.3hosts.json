{
  "host_defaults": {
    "repo_dir": "/root/BloomBee",
    "activate": "",
    "ssh_options": [
      "BatchMode=yes",
      "StrictHostKeyChecking=accept-new",
      "ServerAliveInterval=30",
      "ServerAliveCountMax=120"
    ]
  },
  "hosts": {
    "dht": {
      "host": "merced",
