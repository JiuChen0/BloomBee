    "inter_case_sec": 30,
    "client_timeout_sec": 21600,
    "reinstall_editable_each_case": false,
    "results_root": "/tmp/bb_sensitivity_runs",
    "run_tag": "seq512_batch_sweep"
  },
  "shared_vars": {
    "model": "huggyllama/llama-13b",
